{{>navbar}}
<section class="chat py-5 text-light">
    <div class="container">
      <div class="text-center mb-5">
        <h1>Mis Consultas</h1>
      </div>
      <div class="d-flex justify-content-center">
        <div class="d-flex flex-column align-items-center gap-4" style="width: 1000px; height: fit-content;">
            {{#each chats}}
            <div class="border rounded p-4 w-100 d-flex justify-content-center flex-column gap-4">
                  <div class="d-flex justify-content-center gap-3">
                    <div class="w-100">
                      <h4 class="fw-semibold" style="font-size: 1rem;">{{this.email}}</h4>
                      <p class="fw-lighter m-0 pb-1">{{this.text}}</p>
                      <div class="d-flex justify-content-between align-items-center">
                        <span style="font-size: .875rem; color: rgba(0,0,0,0.4);">
                      </div>
                    </div>
                    <div class="rounded-circle overflow-hidden" style="width: 50px; height: 50px;">
                    </div>
                  </div>
        </div>
        {{/each}}
  </section>